<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackgradientbackground"
    tools:context=".AddRecipeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AddRecipeActivity">

        <ImageView
            android:id="@+id/iVWiseCityLogo"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnEditRecipe"
            app:srcCompat="@drawable/wisecitylogo" />

        <EditText
            android:id="@+id/eTRecipeName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@null"
            android:ems="10"
            android:hint="Recipe Name:"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18sp"
            android:gravity="top|left"
            app:layout_constraintEnd_toEndOf="@+id/iVFoodRecipesLogo"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/iVFoodRecipesLogo"
            app:layout_constraintTop_toBottomOf="@+id/iVFoodRecipesLogo" />

        <EditText
            android:id="@+id/eTRecipeContents"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@null"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Recipe Contents:"
            android:inputType="textMultiLine"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/eTRecipeName"
            app:layout_constraintStart_toStartOf="@+id/eTRecipeName"
            app:layout_constraintTop_toBottomOf="@+id/eTRecipeName" />

        <EditText
            android:id="@+id/eTRecipeDetails"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@null"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Recipe Details:"
            android:inputType="textMultiLine"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/eTRecipeContents"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/eTRecipeContents"
            app:layout_constraintTop_toBottomOf="@+id/eTRecipeContents" />

        <Button
            android:id="@+id/btnEditRecipe"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Add Recipe"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eTRecipeTags" />

        <ImageView
            android:id="@+id/iVFoodRecipesLogo"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/foodrecipeslogo" />

        <EditText
            android:id="@+id/eTRecipeTags"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@null"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Recipe Tags:"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/eTRecipeDetails"
            app:layout_constraintStart_toStartOf="@+id/eTRecipeDetails"
            app:layout_constraintTop_toBottomOf="@+id/eTRecipeDetails" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>