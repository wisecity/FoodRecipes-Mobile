<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackgradientbackground"
    tools:context=".AddRecipeImageActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iVWiseCityLogo"
            android:layout_width="200dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddImage"
            app:srcCompat="@drawable/wisecitylogo" />

        <EditText
            android:id="@+id/eTPictureTag"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Picture Tag:"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/iVFoodRecipesLogo"
            app:layout_constraintStart_toStartOf="@+id/iVFoodRecipesLogo"
            app:layout_constraintTop_toBottomOf="@+id/iVFoodRecipesLogo" />


        <ImageView
            android:id="@+id/iVFoodRecipesLogo"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/foodrecipeslogo" />

        <ImageView
            android:id="@+id/iVSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="selectPicture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eTPictureTag"
            app:srcCompat="@drawable/ic_action_picture" />

        <Button
            android:id="@+id/btnAddImage"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="addImage"
            android:text="Add Image"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iVSelectImage" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>